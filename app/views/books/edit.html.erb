<div class=edit-page>
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
  <div class="update-error">
   <div class="update-error-comment-area">
     <p class="update-error-comment"><%= @book.errors.count %>error prohibited this book from being saved:</p>
   </div>
   <div class="update-error-message-area">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li class="update-error-message"><%= message %></li>
      <% end %>
    </ul>
   </div>
  </div>
  <% end %>

 <%= form_with model: @book do |f| %>
  <p class="edit-title-area">Title</p>
  <%= f.text_field :title %>
  <p class="edit-body-area">Body</p>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Update Book', class:'edit-button' %></p>
  
  <div class=edit-link>
    <%= link_to "Show", book_path(@book.id) %>
    <span>|</span>
    <a class="edit-link" href = "/books">Back</a>
  </div>
 <% end %>
</div>