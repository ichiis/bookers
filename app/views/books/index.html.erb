<h1 class="index-title">Books</h1>

<table class="table-area">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th class="table-link"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td> <%= link_to "Show", book_path(book.id) %>
           <%= link_to "Edit", edit_book_path(book.id) %>
           <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
           </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="new-area">
 <h2 class="new-title">New book</h2>
 <% if @book.errors.any? %>
  <div class="new-error">
   <div class="new-error-comment-area">
     <p class="new-error-comment">
      <%= @book.errors.count %>errors prohibited this book form saved:
     </p>
   </div>
   <div class="new-error-message-area">
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li class="new-error-message"><%= message %></li>
     <% end %>
    </ul>
   </div>
  </div>
<% end %>

  <%= form_with model: @book do |f| %>
   <p class="new-title-area">Title</p>
   <%= f.text_field :title %>
   <p class="new-body-area">Body</p>
   <%= f.text_area :body %>
   <p><%= f.submit 'Create Book', class:'new-button' %></p>
  <% end %>
</div>